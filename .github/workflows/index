    <script>
        // Function to toggle individual message visibility
        function toggleMessage(index) {
            const message = document.getElementById(`message-${index}`);
            const isCurrentlyVisible = message.classList.contains('show');
            
            if (isCurrentlyVisible) {
                message.classList.remove('show');
            } else {
                message.classList.add('show');
            }
        }

        // Array of random messages for the thinking section
        const randomMessages = [
            "I'm probably thinking of you too.",
            "You're on my mind more than you know.",
            "You're my favorite person, even from far away.",
            "I miss you all the time.",
            "I care about you a lot."
        ];

        // Function to display random message
        function showRandomMessage() {
            const randomMessageElement = document.getElementById('random-message');
            const randomIndex = Math.floor(Math.random() * randomMessages.length);
            const selectedMessage = randomMessages[randomIndex];
            
            // Hide current message with fade out
            randomMessageElement.classList.remove('show');
            
            // Show new message after a short delay
            setTimeout(() => {
                randomMessageElement.textContent = selectedMessage;
                randomMessageElement.classList.add('show');
            }, 150);
        }

        // Add some interactive touches
        document.addEventListener('DOMContentLoaded', function() {
            // Add subtle entrance animations
            const thingItems = document.querySelectorAll('.thing-item');
            thingItems.forEach((item, index) => {
                item.style.opacity = '0';
                item.style.transform = 'translateY(20px)';
                
                setTimeout(() => {
                    item.style.transition = 'all 0.6s ease';
                    item.style.opacity = '1';
                    item.style.transform = 'translateY(0)';
                }, index * 100);
            });

            // Animate thinking section
            const thinkingSection = document.querySelector('.thinking-section');
            setTimeout(() => {
                thinkingSection.style.opacity = '0';
                thinkingSection.style.transform = 'translateY(30px)';
                thinkingSection.style.transition = 'all 0.8s ease';
                
                setTimeout(() => {
                    thinkingSection.style.opacity = '1';
                    thinkingSection.style.transform = 'translateY(0)';
                }, 100);
            }, 1000);
        });
    </script>
